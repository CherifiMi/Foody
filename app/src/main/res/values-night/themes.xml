<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Foud" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/main_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/tap_black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/tap_black</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Customize your theme here. -->
        <item name="main_color">@color/tap_black</item>
        <item name="main_background">@drawable/dark_background</item>
        <item name="txt_card">#ffffff</item>
        <item name="big_txt_color">#ffffff</item>
        <item name="card_background">#000000</item>
        <item name="stroke_card">#ffffff</item>
        <item name="bottom_mune_color">#000000</item>
    </style>
    <style name="Theme.Details" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/tap_black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/tap_black</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Customize your theme here. -->
        <item name="main_color">@color/black</item>
        <item name="main_background">@drawable/light_background</item>
        <item name="txt_card">#ffffff</item>
        <item name="card_background">@color/white</item>
        <item name="stroke_card">#CDCDCD</item>
    </style>
</resources>